{
  "schemaVersion": 1,
  "id": "jamesconfig",
  "version": "${version}",

  "name": "James Config",
  "description": "A simple, lightweight, and (almost) dependency-free config mod for both fabric and forge!",
  "authors": ["Vakror Alor (ItsMeNotJames), Smartin"],
  "contact": {},

  "license": "MIT",
  "icon": "config.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.vakror.jamesconfig.fabric.JamesConfigFabric"
    ]
  },
  "mixins": [
    "jamesconfig.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.22",
    "architectury": ">=2",
    "minecraft": ">=1.17.1"
  },
  "custom": {
    "modmenu": {
      "links": {
        "GitHub": "https://github.com/vaylor27/config",
        "Issues": "https://github.com/vaylor27/config/issues"
      },
      "badges": [ "library" ],
      "update_checker": false
    }
  }
}
